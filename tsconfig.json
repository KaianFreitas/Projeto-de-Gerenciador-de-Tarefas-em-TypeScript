{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "./public/dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "./src"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "public/dist"]
}